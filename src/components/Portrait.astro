---
import "../styles/global.css";
const { variant, name } = Astro.props;
import { Icon } from "astro-icon/components";
---

<article>
  <div data-variant={variant}></div>
  <div class="portrait">
    <h4>{name}</h4>
    <p>
      Leverage agile frameworks to provide a robust synopsis for high level
      overviews.
    </p>
    <div class="iconflex">
      <Icon name="instagram" />
      <Icon name="facebook" />
      <Icon name="twitter" />
    </div>
  </div>
</article>
<style>
  [data-variant="sarah"] {
    background-image: url("./images/sarah.png");
    background-repeat: no-repeat;
    background-size: cover;

    width: 22rem;
    height: 23rem;
    border-radius: var(--card-radius);
  }
  [data-variant="john"] {
    background-image: url("./images/john.png");
