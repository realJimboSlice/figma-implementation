  }
  [data-variant="lilly"] {
    background-image: url("./images/lilly.png");
    background-repeat: no-repeat;
    background-size: cover;

    width: 22rem;
    height: 23rem;
    border-radius: var(--card-radius);
  }
  [data-icon="instagram"] {
    width: 1.32rem;
    height: 1.32rem;
  }
