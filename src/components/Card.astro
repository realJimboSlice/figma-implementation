---
const { title, variant, iconName } = Astro.props;
import { Icon } from "astro-icon/components";
import "../styles/global.css";
---

<article data-variant={variant}>
  <Icon name={iconName} />
  <h3>{title}</h3>
  <p>Lorem ipsum dolor sit amet consectetur.</p>
  <a href="#">Read More <Icon name="black-arrow" /></a>
</article>

<style>
  [data-icon="black-arrow"] {
    width: 0.75rem;
    height: 0.7rem;

    gap: 1.5rem;
  }
  a {
    text-decoration: none;
    color: var(--color-primary-black);
    font-family: "Lato", sans-serif;
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 600;
    line-height: 2rem;
    display: flex;
    align-items: center;
    gap: 0.65rem;
  }

  article {
    padding: 2.5rem 1.5rem;
    border-radius: 1.25rem;
  }

  [data-variant="white"] {
    background: var(--color-secondary-white);
    color: var(--color-primary-black);
    border: 1px solid var(--color-secondary-grey);
  }

  [data-variant="black"] {
    background: var(--color-primary-black);
    color: var(--color-secondary-white);
  }

  [data-icon="stack"],
  [data-icon="folder"],
  [data-icon="globe"],
  [data-icon="bar-chart"],
  [data-icon="cog"] {
    width: 3.5rem;
    height: 3.5rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.375rem;
    margin-bottom: 1.375rem;
  }
</style>
