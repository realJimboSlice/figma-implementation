---
import "../styles/global.css";
const { text } = Astro.props;
---

<button>{text}</button>

<style>
  button {
    width: 10rem;
    padding: 1rem 2rem;
    gap: 0.65rem;
    border-radius: 2.5rem;
    background: var(--color-primary-black);
    color: var(--color-secondary-white);
    border: none;
    outline: none;

    font-family: "Lato", sans-serif;
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 700;
    line-height: 1.8rem;
    white-space: nowrap;
  }
</style>
