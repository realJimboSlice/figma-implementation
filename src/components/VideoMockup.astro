---
import "../styles/global.css";
import { Icon } from "astro-icon/components";
---

<div class="sect-vid">
  <figure class="fig-vid">
    <Icon name="play" />
    <div class="outer-layer"></div>
    <img
      src="../images/people-watching.png"
      alt="Image of people watching and pointing at something"
    />
  </figure>
</div>

<style>
  .sect-vid {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 0.625rem;
  }

  .outer-layer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 4.5rem;
  }

  .fig-vid {
    position: relative;

    &::before {
      --diamonds-count: 12;
      aspect-ratio: 1;
      z-index: -1;
      content: "";
      position: absolute;
      inset: -45px -45px auto auto;
      inline-size: calc(var(--diamonds-count) * 1.34rem - 0.67rem);
      background: linear-gradient(150deg, #9d7544, #bb935b, #ba905b, #f6c37f) 0
        0 / 100% 100%;
      mask:
        var(--diamonds) 0 0 / 1.325rem 1.325rem,
        var(--diamonds) 0.67rem 0.67rem / 1.325rem 1.325rem;
    }

    &::after {
      content: "";
      position: absolute;
      left: -2rem;
      bottom: -1rem;
      background: var(--color-primary-green);
      width: 8rem;
      height: 8rem;
      border-radius: 1.1rem;
      z-index: -1;
    }
  }

  .fig-vid > img {
    width: 58rem;
    height: 25rem;
    flex-shrink: 0;
    border-radius: 1.75rem;
  }

  .fig-vid [data-icon="play"] {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 6.9rem;
    height: 6.9rem;
    font-size: 2.5rem;
    z-index: 2;
  }

  .fig-vid .outer-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(30, 30, 30, 0.5);
    opacity: 0.75;
    border-radius: 1.75rem;
    z-index: 1;
  }
</style>
